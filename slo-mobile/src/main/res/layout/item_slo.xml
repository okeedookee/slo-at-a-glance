<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Traffic Light Icon - Larger, on the left -->
        <ImageView
            android:id="@+id/traffic_light_icon"
            android:layout_width="74dp"
            android:layout_height="78dp"
            android:contentDescription="@string/traffic_light_icon"
            android:src="@drawable/ic_traffic_light_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Text Container beside traffic light -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/traffic_light_icon"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- SLO Name - Smaller, cut off when too long -->
            <TextView
                android:id="@+id/slo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"
                tools:text="API Response Time SLO" />

            <!-- Entity Type - Smaller -->
            <TextView
                android:id="@+id/entity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Application" />

            <!-- Status Text - Smaller -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Healthy"
                tools:textColor="@color/status_green" />

            <!-- SLI/SLO Values - Current vs Target -->
            <TextView
                android:id="@+id/sli_slo_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="99.5% / 99.0%" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
